{
  "name": "course-logs",
  "version": "1.0.0",
  "description": "Rencana Studi Sibermu - Course Planning Application",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:js": "node build-js.js",
    "watch:js": "node build-js.js --watch",
    "dev": "npm-run-all --parallel watch:css watch:js",
    "build": "npm-run-all build:css build:js",
    "deploy": "pnpm run build && wrangler pages deploy . --project-name=course-logs",
    "deploy:preview": "pnpm run build && wrangler pages deploy . --project-name=course-logs --branch=preview",
    "test": "playwright test",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:functional": "playwright test tests/comprehensive.spec.js --project=chromium-desktop",
    "test:mobile": "playwright test tests/comprehensive.spec.js --project=chromium-mobile",
    "test:tablet": "playwright test tests/comprehensive.spec.js --project=chromium-tablet",
    "test:all-devices": "playwright test tests/comprehensive.spec.js"
  },
  "keywords": [
    "education",
    "course-planning",
    "study-plan"
  ],
  "author": "Heri Rusmanto",
  "license": "MIT",
  "dependencies": {
    "@alpinejs/collapse": "^3.14.3",
    "alpinejs": "^3.14.3",
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/cli": "^4.1.16",
    "esbuild": "^0.25.11",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.16",
    "wrangler": "^4.45.0"
  }
}
